<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    {% block scripts %}
        <script defer src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    {% endblock %}
    <title>{{ title }}</title>
</head>
<body>
<header>
    <nav>
        <ul class="page-nav">
            {% if 'PAGE_HOME' in perms %}<li><a href="/">Home</a></li>{% endif %}
            {% if 'PAGE_REPORTS' in perms %}<li><a href="/reports">Reports</a></li>{% endif %}
            {% if 'PAGE_USERS' in perms  %}<li><a href="/users">Users</a></li>{% endif %}
            {% if 'PAGE_SECURITY' in perms %}<li><a href="/security">Security</a></li>{% endif %}
            {% if 'PAGE_ADMIN' in perms %}<li><a href="/admin">Admin</a></li>{% endif %}
        </ul>
        <ul class="profile-nav">
            {% if 'PAGE_PROFILE' in perms %}<li><a href="/profile">Profile</a></li>{% endif %}
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
</header>
<main>
    {% block main %}<h1>Main</h1>{% endblock %}
</main>
<footer></footer>
</body>
</html>